#include <stdio.h>
#include <math.h> // For pow() in square calculation, optional

int main() {
    
    // 1. Print "Hello Students"
    printf("Hello Students\n");

    // 2. Print "Hello" in the first line and "Students" in the second line
    printf("Hello\nStudents\n");

    // 3. Print "MySirG" on the screen (in double quotes)
    printf("\"MySirG\"\n");

    // 4. Print \n on the screen
    printf("\\n\n");

    // 5. Print \r on the screen
    printf("\\r\n");

    // 6. Print "Teacher's Day" (with single and double quotes)
    printf("\"Teacher's Day\"\n");

    // 7. Calculate the sum of two integers (input from user)
    int num1, num2, sum;
    printf("Enter two integers to calculate their sum: ");
    scanf("%d %d", &num1, &num2);
    sum = num1 + num2;
    printf("Sum: %d\n", sum);

    // 8. Calculate the square of a given number (input from user)
    int number, square;
    printf("Enter an integer to calculate its square: ");
    scanf("%d", &number);
    square = number * number; // Alternatively: square = pow(number, 2);
    printf("Square: %d\n", square);

    // 9. Calculate the area of a rectangle (input from user)
    int length, width, areaRectangle;
    printf("Enter the length and width of the rectangle: ");
    scanf("%d %d", &length, &width);
    areaRectangle = length * width;
    printf("Area of Rectangle: %d\n", areaRectangle);

    // 10. Calculate the area of a circle (input radius from user)
    float radius, areaCircle;
    printf("Enter the radius of the circle: ");
    scanf("%f", &radius);
    areaCircle = 3.14159 * radius * radius;
    printf("Area of circle is %.2f having the radius %.2f\n", areaCircle, radius);

    return 0;
}

